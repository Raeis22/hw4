<!DOCTYPE html>
<html>
  <head>
    <title>Traveljournal.com</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="/stylesheets/application.css">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <span class="navbar-brand mb-0 h1">Traveljournal.com</span>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <% if @current_user %>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/places">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/logout">Log out</a>
              </li>
              <li class="nav-item me-2">
                Hey, <%= @current_user["username"] %>
              </li>
            <% else %>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/login">Log in</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/users/new">Sign up</a>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>  

    <p>
      <%= flash["notice"] %>
    </p>

    <%= yield %>
  </body>
</html>
